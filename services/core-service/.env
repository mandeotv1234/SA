PORT=3000

# Use DATABASE_URL or individual vars. Compose sets DATABASE_URL by default:
# DATABASE_URL=postgresql://dev:dev@timescaledb:5432/timeseriesdb
DB_USER=dev
DB_HOST=timescaledb
DB_NAME=timeseriesdb
DB_PASSWORD=dev
DB_PORT=5432

# Kafka (compose provides kafka host)
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=core-service
KAFKA_GROUP_ID=core-db-consumers

# Optional tuning
MARKET_DATA_TOPIC=market_data
MARKET_CONSUMER_BATCH_SIZE=100
MARKET_CONSUMER_FLUSH_MS=2000